{
  "name": "toxin",
  "version": "1.0.0",
  "description": "project toxin",
  "main": "index.js",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/*.scss\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "start": "parcel src/index.pug --open",
    "build": "parcel build src/index.pug -d docs --public-url ./"
  },
  "keywords": [
    "ru"
  ],
  "author": "Lelyavin Nikita",
  "license": "ISC",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "^9.6.1",
    "pug": "^3.0.1",
    "sass": "^1.23.0",
    "stylelint": "10.1.x",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.scss"
  ],
  "dependencies": {
    "normalize-scss": "^7.0.1"
  }
}
